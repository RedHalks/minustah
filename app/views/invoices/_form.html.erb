<div class="row">
  <div class="col-md-6 mb-3">
    <%= form.label Member.model_name.human, class: 'form-label' %>
    <%= form_select(:member_id, invoice_members, form)%>
  </div>
  <div class="col-md-6 mb-3">
    <%= form.label CashFlow.model_name.human, class: 'form-label' %>
    <%= form_select(:cash_flow_id, invoice_cash_flows(@invoice.member_id), form)%>
  </div>
  <div class="col-md-6 mb-3">
    <%= form.label :category, class: 'form-label' %>
    <%= form_select(:category, invoice_category_options, form)%>
  </div>
  <div class="col-md-6 mb-3">
    <%= form.label :value, class: 'form-label' %>
    <div class="input-group mb-3">
      <span class="input-group-text">R$</span>
      <%= form.number_field :value, step: 0.01, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6 mb-3">
    <%= form.label :reference_date, class: 'form-label' %>
    <%= form.date_field :reference_date, class: 'form-control' %>
  </div>
</div>
